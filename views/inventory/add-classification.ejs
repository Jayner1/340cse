
<div class="management">
    <h1>Add New Classification</h1>

    <% if (errors && errors.length > 0) { %>
        <div class="error-messages">
          <ul>
            <% errors.forEach(error => { %>
              <li><%= error %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

    <form action="/inv/add-classification" method="POST">
        <label for="classificationName">Classification Name:</label>
        <input
            type="text"
            name="classificationName"
            id="classificationName"
            class="form-control"
            value="<%= classificationName ? classificationName : '' %>"
            required
            title="Only letters and numbers are allowed. No spaces or special characters."
            placeholder="Classification Name"
        >

        <small class="validation-message">
            Only letters and numbers allowed. No spaces or special characters.
        </small>

        <button type="submit">Add Classification</button>
    </form>

    <a href="/inv/management">Back to Inventory Management</a>
</div>
