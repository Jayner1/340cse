<div class="inventory-form">
    <h1><%= title %></h1>
  
    <% if (errors && errors.length > 0) { %>
      <div class="error-messages" role="alert" aria-live="polite">
        <p>Errors occurred while submitting the form:</p>
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
  
    <form action="/inv/update" method="post" id="updateForm">
      <label for="inv_make">Make:</label>
      <input 
        type="text" 
        name="inv_make" 
        id="inv_make" 
        class="form-control" 
        value="<%= inv_make || '' %>" 
        required 
        placeholder="Vehicle Make"
        maxlength="100"
      >
  
      <label for="inv_model">Model:</label>
      <input 
        type="text" 
        name="inv_model" 
        id="inv_model" 
        class="form-control" 
        value="<%= inv_model || '' %>" 
        required 
        placeholder="Vehicle Model"
        maxlength="100"
      >
  
      <label for="inv_year">Year:</label>
      <input 
        type="number" 
        name="inv_year" 
        id="inv_year" 
        class="form-control" 
        value="<%= inv_year || '' %>" 
        required 
        placeholder="Vehicle Year"
        min="1900" 
        max="<%= currentYear + 1 %>"
      >
  
      <label for="inv_color">Color:</label>
      <input 
        type="text" 
        name="inv_color" 
        id="inv_color" 
        class="form-control" 
        value="<%= inv_color || '' %>" 
        required 
        placeholder="Vehicle Color"
        maxlength="50"
      >
  
      <label for="inv_price">Price:</label>
      <input 
        type="number" 
        name="inv_price" 
        id="inv_price" 
        class="form-control" 
        value="<%= inv_price || '' %>" 
        required 
        placeholder="Vehicle Price"
        min="0"
        step="0.01"
      >
  
      <label for="inv_miles">Mileage:</label>
      <input 
        type="number" 
        name="inv_miles" 
        id="inv_miles" 
        class="form-control" 
        value="<%= inv_miles || '' %>" 
        required 
        placeholder="Vehicle Mileage"
        min="0"
      >
  
      <label for="inv_description">Description:</label>
      <textarea 
        name="inv_description" 
        id="inv_description" 
        class="form-control"
        placeholder="Vehicle Description"
        required
      ><%= inv_description || '' %></textarea>
  
      <label for="inv_image">Image Path:</label>
      <input 
        type="text" 
        name="inv_image" 
        id="inv_image" 
        class="form-control" 
        value="<%= inv_image || '/images/vehicles/no-image.png' %>" 
        required 
        placeholder="Vehicle Image Path"
      >
  
      <label for="inv_thumbnail">Thumbnail Path:</label>
      <input 
        type="text" 
        name="inv_thumbnail" 
        id="inv_thumbnail" 
        class="form-control" 
        value="<%= inv_thumbnail || '/images/vehicles/no-image-tn.png' %>" 
        required 
        placeholder="Vehicle Thumbnail Path"
      >
  
      <label for="classificationList">Classification:</label>
      <%- classificationList %>
  
      <div>
        <label>Thumbnail Image Preview:</label>
        <img src="<%= inv_thumbnail || '/images/vehicles/no-image-tn.png' %>" alt="Thumbnail" class="vehicle-thumbnail">
      </div>
      <div>
        <label>Full Image Preview:</label>
        <img src="<%= inv_image || '/images/vehicles/no-image.png' %>" alt="Full Image" class="vehicle-image">
      </div>
      <br>
      
      <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
      <button type="submit" class="btn btn-primary" disabled>Update Vehicle</button>
    </form>
  
    <a href="/inv/management">Back to Inventory Management</a>
</div>

<script src="/js/inv-update.js"></script>