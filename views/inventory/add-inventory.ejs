<div class="inventory-form">
    <h1>Add New Vehicle</h1>
  
    <% if (errors && errors.length > 0) { %>
      <div class="error-messages" role="alert" aria-live="polite">
        <p>Errors occurred while submitting the form:</p>
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
  
    <form action="/inv/add-inventory" method="POST" id="inventoryForm">
      <label for="inv_make">Make:</label>
      <input 
        type="text" 
        name="inv_make" 
        id="inv_make" 
        class="form-control" 
        value="<%= inv_make || '' %>" 
        required 
        placeholder="Vehicle Make"
        maxlength="100"
      >
  
      <label for="inv_model">Model:</label>
      <input 
        type="text" 
        name="inv_model" 
        id="inv_model" 
        class="form-control" 
        value="<%= inv_model || '' %>" 
        required 
        placeholder="Vehicle Model"
        maxlength="100"
      >
  
      <label for="inv_year">Year:</label>
      <input 
        type="number" 
        name="inv_year" 
        id="inv_year" 
        class="form-control" 
        value="<%= inv_year || '' %>" 
        required 
        placeholder="Vehicle Year"
        min="1900" 
        max="<%= currentYear + 1 %>"
      >
  
      <label for="inv_color">Color:</label>
      <input 
        type="text" 
        name="inv_color" 
        id="inv_color" 
        class="form-control" 
        value="<%= inv_color || '' %>" 
        required 
        placeholder="Vehicle Color"
        maxlength="50"
      >
  
      <label for="inv_price">Price:</label>
      <input 
        type="number" 
        name="inv_price" 
        id="inv_price" 
        class="form-control" 
        value="<%= inv_price || '' %>" 
        required 
        placeholder="Vehicle Price"
        min="0"
        step="0.01"
      >
  
      <label for="inv_miles">Mileage:</label>
      <input 
        type="number" 
        name="inv_miles" 
        id="inv_miles" 
        class="form-control" 
        value="<%= inv_miles || '' %>" 
        required 
        placeholder="Vehicle Mileage"
        min="0"
      >
  
      <label for="classificationList">Classification:</label>
      <select name="classification_id" id="classificationList" class="form-control" required>
        <option value="">Choose a Classification</option>
        <% classificationList.forEach(classification => { %>
          <option value="<%= classification.classification_id %>" <%= classification.classification_id == classification_id ? 'selected' : '' %>>
            <%= classification.classification_name %>
          </option>
        <% }) %>
      </select>
  
      <div>
        <label>Thumbnail Image:</label>
        <img src="/images/vehicles/no-image-tn.png" alt="No Thumbnail" class="vehicle-thumbnail">
      </div>
      <div>
        <label>Full Image:</label>
        <img src="/images/vehicles/no-image.png" alt="No Image Available" class="vehicle-image">
      </div>
      <br>
      <button type="submit" class="btn btn-primary">Add Vehicle</button>
    </form>
  
    <a href="/inv/management">Back to Inventory Management</a>
  </div>