<div class="main-container">
    <h1>Welcome to CSE Motors!</h1>
    <%- messages() %>
  
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-image" style="background-image: url('/images/vehicles/delorean.jpg');">
        <div class="hero-overlay">
          <h2>DMC Delorean</h2>
          <h3>3 Cup holders<br>Superman doors<br>Fuzzy dice!</h3>
          <a href="" class="btn-primary">Own Today</a>
        </div>
      </div>
    </section>
  
    <!-- Content Section -->
    <section class="content">
      <!-- Left Section: Delorean Upgrades -->
      <div class="left-section">
        <h2>Delorean Upgrades</h2>
        <div class="upgrades-grid">
          <div class="upgrade-item">
            <img src="/images/upgrades/flux-cap.png" alt="Upgrade 1">
            <p>Flux Capacitor</p>
          </div>
          <div class="upgrade-item">
            <img src="/images/upgrades/flame.jpg" alt="Upgrade 2">
            <p>Flame Decals</p>
          </div>
          <div class="upgrade-item">
            <img src="/images/upgrades/bumper_sticker.jpg" alt="Upgrade 3">
            <p>Bumper Stickers</p>
          </div>
          <div class="upgrade-item">
            <img src="/images/upgrades/hub-cap.jpg" alt="Upgrade 4">
            <p>Hub Caps</p>
          </div>
        </div>
      </div>
  
      <!-- Right Section: DMC Delorean Reviews -->
      <div class="right-section">
        <h2>DMC Delorean Reviews</h2>
        <ul class="reviews-list">
          <li>"So fast it's almost like traveling in time." (4/5)</li>
          <li>"Coolest ride on the road." (4/5)</li>
          <li>"I'm feeling McFly!" (5/5)</li>
          <li>"The most futuristic ride of our day." (4.5/5)</li>
          <li>"80's livin and I love it!" (5/5)</li>
        </ul>
      </div>
    </section>
  </div>
  